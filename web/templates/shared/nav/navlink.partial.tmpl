{{if get . "Display"}}
<a
  href={{get . "Navlink.Href"}}
  {{if hasPrefix (get . "Navlink.Href") (get . "Meta.Path")}}
  class="navbar-item nav-link is-active"
  {{else}}
  class="navbar-item nav-link"
  {{end}}
  data-controller="navigation-link{{if get . "ClearCache"}} turbo-cache{{end}}"
  data-action="click->navigation-menu#close{{if get . "ClearCache"}} click->turbo-cache#clear{{end}}"
>
  {{get . "Navlink.Name"}}
</a>
{{end}}
