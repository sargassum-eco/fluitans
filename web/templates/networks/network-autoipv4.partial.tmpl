{{$network := (get . "Network")}}
{{$auth := get . "Auth"}}

<turbo-frame id="/networks/{{$network.Id}}/autoipv4">
  <h3>IPv4 Auto-Assignments</h3>
  <p class="mb-4">
    This network has the following modes for automatic assignment of IPv4 addresses (note that weird
    behavior may occur on devices on multiple networks with overlapping IPv4 addresses):
  </p>
  <form
    action="/networks/{{$network.Id}}/autoipv4"
    method="POST"
    data-turbo-frame="_top"
    data-controller="form-submission csrf"
    data-action="submit->form-submission#submit submit->csrf#addToken"
  >
    {{template "shared/auth/csrf-input.partial.tmpl" $auth.CSRF}}
    <div class="field">
      <label class="label">Modes</label>
      <div class="control">
        <label class="checkbox">
          <input
            type="checkbox"
            name="zerotier"
            value="true"
            {{if derefBool $network.V4AssignMode.Zt}}
              checked
            {{end}}
          >
          Network-Managed IPv4 Routes
        </label>
      </div>
    </div>
    <div class="field">
      <div class="control" data-form-submission-target="submitter">
        <input
          class="button"
          type="submit"
          value="Update modes"
          data-form-submission-target="submit"
        >
      </div>
    </div>
  </form>
</turbo-frame>
